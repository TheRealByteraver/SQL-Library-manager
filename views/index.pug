extends layout
block content
  h1 Books
  p
    a.button(href="/books/new") Create New Book
  form#search-form(action="/books/search/1", method="get")
    input#search-input(type="search", name="searchValue" class="search-input", placeholder="Search...")
    input#search-submit(type="submit", value="üîç", class="search-submit")
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books  
        tr
          td
            a(href=`/books/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.year
      else 
        h3 Bummer, no books found!
  p
  .pagination          
    - var index = 1;
    ul.link-list
      while index <= nrOfPages
        li 
          button(type="button", class=`${ (index === requestedPage) ? "active" : ""}`)= index
          - index++;
  script(src="/public/javascripts/script.js")